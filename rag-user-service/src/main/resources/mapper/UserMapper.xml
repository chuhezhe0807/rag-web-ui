<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chuhezhe.raguserservice.mapper.user.UserMapper">

    <select id="getUserByUsername" resultType="com.chuhezhe.raguserservice.entity.User">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="getUserByEmail" resultType="com.chuhezhe.raguserservice.entity.User">
        SELECT * FROM users WHERE email = #{email}
    </select>
</mapper>